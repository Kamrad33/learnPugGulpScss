mixin menuBtn(vars, menuElms=[{text: '1 elm'}, {text: '2 elm'}, {text: '3 elm'}, {text: '4 elm'}], contentElems= {photo: '../../assets/images/boyNextDoorImg.png', name: 'Dimitry', phone: ' +375 (29) 291-14-44', email: 'vladimir6234@tut.by'})
    +stdBtn(
        {
            text: vars.text, 
            cls: vars.cls, 
            color: vars.color, 
            type: vars.type,
            width: vars.width, 
            gap: vars.gap, 
            icon: vars.icon, 
            iconPlace: vars.iconPlace, 
            iconColor: vars.text,
            buttonPlace: vars.buttonPlace,
            })
        case vars.menuType
            when 'list'
                ul
                    each elm in menuElms
                        li= elm.text
            when 'content'
                div
                    .menuContent
                        .menuContent_user
