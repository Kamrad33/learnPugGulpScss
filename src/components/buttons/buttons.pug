mixin listBtn_Group(values, type= 'light', gap= '20px')
    case type 
        when 'left_Top'
            .listBtn_Group_Left_Top(role='group' style{gap: gap})
                each value in values
                    +listBtn(value.text, value.cls, value.color, value.icon, value.type, value.gap, value.iconPlace, value.iconColor, value.id, value.link)
        when 'right_Top'
            .listBtn_Group_Right_Top(role='group')
                each value in values
                    +listBtn(value.text, value.cls, value.color, value.icon, value.type, value.gap, value.iconPlace, value.iconColor, value.id, value.link)
        when 'middle_Bottom'
            .listBtn_Group_Middle_Bottom(role= 'group')
                each value in values
                    +listBtn(value.text, value.cls, value.color, value.icon, value.type, value.gap, value.iconPlace, value.iconColor, value.id, value.link)
    block
    
mixin stdCheckBox(vars= {text:'Text', color:'grey purple', cls:'primary', id: 'text'})
    .stdCheckBox(class=`${vars.cls ? vars.cls : 'primary'} ${vars.color ? vars.color : 'white'}`)
        input(
        class=`customCheckbox ${vars.cls ? vars.cls : 'primary'} ${vars.color ? vars.color : 'grey purple'}` 
        type= 'checkbox' 
        placeholder= `${vars.text ? vars.text : 'Text'}` 
        id= `${vars.id ? vars.id : ''}` 
        style={gap: `${vars.gap ? vars.gap : '5px'}`, 'flex-direction': `${iconPlace ? place : 'left'},`})
        label(for= `${vars.id ? vars.id : vars.cls}`)
            span(id=`${vars.id}_title`)=vars.text

mixin toggleBtn(vars)
    .toggleBtn
        label(class = 'toggle')
            input(type='checkbox' id: vars.id)
            span(class = 'slider')
        .toggleBtn_title=vars.text
