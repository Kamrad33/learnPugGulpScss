include ../../views/helpers/mixins.pug

//- header button
mixin listBtn(text= 'Button', cls='primary', color= 'grey', icon, type= 'w4', gap='5px', iconPlace='left', iconColor= 'grey', id= '', link='')
    -
        if (iconPlace == 'left')
        {var place = 'row-reverse'} 
        else {var place = 'row'}

    .listBtn(class=`${cls} ${color} ${type}` style={gap: gap, 'flex-direction': place} id=id)
        a(href= link)
            span= text
        case icon
            when 'loc'
                .topButtonIcon(class=iconColor) 
                    include ../../assets/images/locImg.svg
            when 'locBig'
                .topButtonIcon(class=iconColor) 
                    include ../../assets/images/locBigImg.svg   
            when 'heart'
                .topButtonIcon(class=iconColor) 
                    include ../../assets/images/heartImg.svg

//- standard button
mixin stdBtn(vars)
    -
        if (vars.iconPlace == 'left')
        {var place = 'row-reverse'} 
        else {var place = 'row'}
    
    button.stdBtn(
        id= vars.id
        class=`${vars.cls ? vars.cls : 'primary'} ${vars.color ? vars.color : 'grey'} ${vars.type ? vars.type : 'w4'} ${vars.buttonPlace ? vars.buttonPlace : 'standard'}` 
        style={gap: `${vars.gap ? vars.gap : '5px'}`, 'flex-direction': `${vars.iconPlace ? place : 'left'}`, width: vars.width, })
        case vars.cls
            when 'metro'
                .stdButtonIcon(class = vars.iconColor style = {height: '20x', width: '20px'  })
                    include ../../assets/images/metroImg.svg
            when 'phone'
                .stdButtonIcon(class = vars.iconColor style = {height: '20x', width: '20px' })
                    include ../../assets/images/cellphoneImg.svg
            when 'locBig'
                    .stdButtonIcon(class= vars.iconColor) 
                        include ../../assets/images/locBigImg.svg
            when 'sort'
                    .stdButtonIcon(class= vars.iconColor style ={'margin-right': '10px'}) 
                        include ../../assets/images/sortImg.svg
            when 'lines'
                    .stdButtonIcon(class=iconColor ) 
                        include ../../assets/images/linesImg.svg
            when 'cubes'
                    .stdButtonIcon(class=iconColor ) 
                        include ../../assets/images/cubesImg.svg  
            when 'heart'
                .topButtonIcon(class=iconColor) 
                    include ../../assets/images/heartImg.svg
            when 'home'
                .topButtonIcon(class=iconColor) 
                    include ../../assets/images/homeImg.svg   
        
        .stdBtn_innerText(class = vars.textAlign)
            span(id = `${vars.id}_innerText`)= vars.text
            case vars.icon
                when 'arrowLeft'
                    .stdButtonIcon(class = vars.iconColor style = {height: '18px', width: '18px' })
                        include ../../assets/images/arrowLeftImg.svg
                when 'arrowDown'
                    .stdButtonIcon(class = vars.iconColor style = {height: '18px', width: '18px'})
                        include ../../assets/images/arrowDownImg.svg
                when 'loc'
                    .stdButtonIcon(class = vars.iconColor)
                        include ../../assets/images/locImg.svg
                when 'locBig'
                    .stdButtonIcon(class= vars.iconColor) 
                        include ../../assets/images/locBigImg.svg  
                when 'setup'
                    .stdButtonIcon(class = vars.iconColor)
                        include ../../assets/images/setupImg.svg
                when 'heart'
                    .stdButtonIcon(class=iconColor) 
                        include ../../assets/images/heartImg.svg

        block    

