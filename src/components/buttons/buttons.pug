            cls: vars.cls, 
            color: vars.color, 
            type: vars.type,
            width: vars.width, 
            gap: vars.gap, 
            icon: vars.icon, 
            iconPlace: vars.iconPlace, 
            iconColor: vars.text,
            buttonPlace: vars.buttonPlace,
            id: vars.id
            })
        case vars.menuType
            when 'list'
