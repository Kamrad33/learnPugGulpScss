                                .menuContent_user_info_name= 'Dmitriy'
                        .menuContent_contacts
                            .menuContent_contacts_phone= contentElems.phone
                            .menuContent_contacts_email= contentElems.email
                        .menuContent_apps
                            .menuContent_apps_item(class= 'viber')
                                include ../../assets/images/viberImg.svg
                            .menuContent_apps_item(class= 'watsUp')
                                include ../../assets/images/whatsappImg.svg
