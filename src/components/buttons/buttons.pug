include ../../views/helpers/mixins.pug

//- header button
mixin listBtn(text= 'Button', cls='primary', color= 'grey', icon, type= 'w4', gap='5px', iconPlace='left', iconColor= 'grey')
    -
        if (iconPlace == 'left')
        {var place = 'row-reverse'} 
        else {var place = 'row'}

    .listBtn(class=`${cls} ${color} ${type}` style={gap: gap, 'flex-direction': place})= text
        case icon
            when 'loc'
                .topButtonIcon(class=iconColor) 
                    include ../../assets/images/locImg.svg
            when 'locBig'
                .topButtonIcon(class=iconColor) 
                    include ../../assets/images/locBigImg.svg   
            when 'heart'
                .topButtonIcon(class=iconColor) 
                    include ../../assets/images/heartImg.svg

//- standard button
mixin stdBtn(vars)
    -
        if (vars.iconPlace == 'left')
        {var place = 'row-reverse'} 
        else {var place = 'row'}
    
    button.stdBtn(
        class=`${vars.cls ? vars.cls : 'primary'} ${vars.color ? vars.color : 'grey'} ${vars.type ? vars.type : 'w4'} ${vars.buttonPlace ? vars.buttonPlace : 'standard'}` 
        style={gap: `${vars.gap ? vars.gap : '5px'}`, 'flex-direction': `${vars.iconPlace ? place : 'left'}`, width: vars.width, })
        case vars.cls
            when 'metro'
                .stdButtonIcon(class = vars.iconColor style = {height: '20x', width: '20px' })
                    include ../../assets/images/metroImg.svg
            when 'phone'
                .stdButtonIcon(class = vars.iconColor style = {height: '20x', width: '20px' })
                    include ../../assets/images/cellphoneImg.svg
        
        .stdBtn_innerText= vars.text
            case vars.icon
                when 'arrowLeft'
                    .stdButtonIcon(class = vars.iconColor style = {height: '18px', width: '18px' })
                        include ../../assets/images/arrowLeftImg.svg
                when 'arrowDown'
                    .stdButtonIcon(class = vars.iconColor style = {height: '18px', width: '18px'})
                        include ../../assets/images/arrowDownImg.svg
                when 'loc'
                    .stdButtonIcon(class = vars.iconColor)
                        include ../../assets/images/locImg.svg
                when 'locBig'
                    .stdButtonIcon(class= vars.iconColor) 
                        include ../../assets/images/locBigImg.svg  
                when 'setup'
                    .stdButtonIcon(class = vars.iconColor)
                        include ../../assets/images/setupImg.svg
                when 'heart'
                    .stdButtonIcon(class=iconColor) 
                        include ../../assets/images/heartImg.svg
        block    

